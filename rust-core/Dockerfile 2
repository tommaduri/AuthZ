# Multi-stage build for Vigilia AI Protocol Node

# Stage 1: Build environment
FROM rust:1.75-slim as builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    build-essential \
    cmake \
    clang \
    llvm \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy workspace configuration
COPY Cargo.toml ./
COPY src ./src

# Build release binary
RUN cargo build --release --bin cretoai-node

# Stage 2: Runtime environment
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -u 1000 vigilia

# Create data directories
RUN mkdir -p /data/db /data/keys /data/logs && \
    chown -R vigilia:vigilia /data

# Copy binary from builder
COPY --from=builder /app/target/release/cretoai-node /usr/local/bin/cretoai-node

# Copy default configuration
COPY config/node.toml.example /etc/cretoai/node.toml

# Switch to non-root user
USER vigilia

# Expose ports
# 8080: HTTP API
# 8081: WebSocket
# 9000: P2P
# 9001: QUIC (UDP)
# 9090: Prometheus metrics
EXPOSE 8080 8081 9000 9001/udp 9090

# Set environment variables
ENV RUST_LOG=info
ENV CRETOAI_CONFIG=/etc/cretoai/node.toml
ENV CRETOAI_DATA_DIR=/data

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD ["/usr/local/bin/cretoai-node", "health"]

# Run the node
CMD ["/usr/local/bin/cretoai-node", "--config", "/etc/cretoai/node.toml"]
