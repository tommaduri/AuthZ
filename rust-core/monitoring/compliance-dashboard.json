{
  "dashboard": {
    "title": "CretoAI Phase 7 - Real-Time Compliance Dashboard",
    "uid": "cretoai-phase7-compliance",
    "version": 1,
    "timezone": "browser",
    "schemaVersion": 30,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "tags": ["cretoai", "phase7", "compliance", "cmmc", "fedramp"],
    "panels": [
      {
        "id": 1,
        "title": "CMMC 2.0 Level 2 Compliance Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "cretoai_compliance_cmmc_level2_status",
            "legendFormat": "Compliance Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {"text": "Non-Compliant", "color": "red"},
                  "1": {"text": "Compliant", "color": "green"}
                },
                "type": "value"
              }
            ],
            "unit": "none",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "FedRAMP Moderate Control Compliance",
        "type": "gauge",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "(cretoai_compliance_fedramp_moderate_controls_passing / cretoai_compliance_fedramp_moderate_controls_total) * 100",
            "legendFormat": "Control Compliance %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Compliance Violations (24h)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(increase(cretoai_compliance_violations_total[24h]))",
            "legendFormat": "Total Violations",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Audit Log Completeness",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "cretoai_compliance_audit_log_completeness_percent",
            "legendFormat": "Completeness",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Compliance Violations by Severity",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(cretoai_compliance_violations_total[24h])) by (severity)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 6,
        "title": "Violations Over Time",
        "type": "graph",
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(cretoai_compliance_violations_total[5m])) by (severity)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 3
          }
        }
      },
      {
        "id": 7,
        "title": "CMMC 2.0 Level 2 Domain Compliance",
        "type": "table",
        "gridPos": {"x": 0, "y": 14, "w": 24, "h": 10},
        "targets": [
          {
            "expr": "cretoai_compliance_cmmc_domain_status",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "domain": "CMMC Domain",
                "status": "Compliant",
                "control_count": "Total Controls",
                "passing_count": "Passing",
                "last_check": "Last Checked"
              }
            }
          }
        ],
        "options": {
          "sortBy": [{"displayName": "CMMC Domain", "desc": false}]
        }
      },
      {
        "id": 8,
        "title": "FedRAMP NIST 800-53 Control Families",
        "type": "table",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 10},
        "targets": [
          {
            "expr": "cretoai_compliance_fedramp_control_family_status",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "control_family": "Control Family",
                "family_id": "ID",
                "status": "Status",
                "control_count": "Total",
                "passing_count": "Passing",
                "compliance_percent": "Compliance %"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Access Control Violations",
        "type": "graph",
        "gridPos": {"x": 0, "y": 34, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(cretoai_compliance_access_control_violations_total[5m])) by (violation_type)",
            "legendFormat": "{{violation_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 3
          }
        }
      },
      {
        "id": 10,
        "title": "Encryption Status",
        "type": "stat",
        "gridPos": {"x": 12, "y": 34, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "cretoai_compliance_encryption_at_rest_enabled",
            "legendFormat": "At Rest",
            "refId": "A"
          },
          {
            "expr": "cretoai_compliance_encryption_in_transit_enabled",
            "legendFormat": "In Transit",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {"text": "Disabled", "color": "red"},
                  "1": {"text": "Enabled", "color": "green"}
                },
                "type": "value"
              }
            ]
          }
        }
      },
      {
        "id": 11,
        "title": "Audit Log Volume",
        "type": "graph",
        "gridPos": {"x": 18, "y": 34, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(cretoai_compliance_audit_log_entries_total[5m])",
            "legendFormat": "Entries/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 12,
        "title": "Data Breach Detection Events",
        "type": "stat",
        "gridPos": {"x": 12, "y": 38, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(cretoai_compliance_data_breach_detected_total[24h]))",
            "legendFormat": "Breach Events (24h)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Compliance Check Latency",
        "type": "graph",
        "gridPos": {"x": 0, "y": 42, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(cretoai_compliance_check_duration_seconds_bucket[5m])) by (le, check_type))",
            "legendFormat": "p95 - {{check_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3
          }
        }
      },
      {
        "id": 14,
        "title": "Compliance Automation Coverage",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 42, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(cretoai_compliance_automated_checks_total / cretoai_compliance_total_checks_required) * 100",
            "legendFormat": "Automation %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 15,
        "title": "Recent Compliance Events",
        "type": "logs",
        "gridPos": {"x": 0, "y": 50, "w": 24, "h": 10},
        "targets": [
          {
            "expr": "{namespace=\"cretoai-system\", app=\"compliance\"} |= \"VIOLATION\" or \"WARNING\" or \"ALERT\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending",
          "wrapLogMessage": false
        }
      }
    ]
  }
}
