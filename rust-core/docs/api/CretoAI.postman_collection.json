            "url": {
              "raw": "{{base_url}}/api/{{api_version}}/crypto/hash",
              "host": ["{{base_url}}"],
              "path": ["api", "{{api_version}}", "crypto", "hash"]
            },
            "description": "Hash data with quantum-resistant BLAKE3.\n\n**Data (decoded):** \"Hello, Quantum World!\"\n**Algorithm:** BLAKE3\n**Performance:** 3-4 GB/s throughput"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response contains hash\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.hash).to.exist;",
                  "});"
