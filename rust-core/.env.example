# CretoAI Environment Configuration
# Copy to .env and customize for your deployment

# ============================================================================
# API Server Configuration
# ============================================================================
CRETOAI_API_HOST=0.0.0.0
CRETOAI_API_PORT=8080
RUST_LOG=info,cretoai_api=debug

# ============================================================================
# Consensus Configuration
# ============================================================================
# Comma-separated list of consensus node addresses
CRETOAI_CONSENSUS_NODES=node-1:9000,node-2:9000,node-3:9000

# Consensus parameters
CRETOAI_CONSENSUS_TIMEOUT_MS=5000
CRETOAI_CONSENSUS_FINALITY_DEPTH=10
CRETOAI_BFT_THRESHOLD=0.67

# ============================================================================
# Cryptography Configuration
# ============================================================================
# Signature algorithm: dilithium, sphincs
CRETOAI_SIGNATURE_ALGORITHM=dilithium

# KEM algorithm: kyber, hqc
CRETOAI_KEM_ALGORITHM=kyber

# Enable hybrid classical+quantum mode
CRETOAI_HYBRID_MODE=true

# ============================================================================
# Network Configuration
# ============================================================================
# P2P listening addresses
CRETOAI_LISTEN_ADDRESSES=/ip4/0.0.0.0/tcp/9000,/ip4/0.0.0.0/udp/9001/quic-v1

# Bootstrap peers (for non-bootstrap nodes)
CRETOAI_BOOTSTRAP_PEERS=

# Maximum peers
CRETOAI_MAX_PEERS=50

# Enable mDNS local discovery
CRETOAI_MDNS_ENABLED=true

# ============================================================================
# Storage Configuration
# ============================================================================
# Database backend: rocksdb, sled
CRETOAI_STORAGE_BACKEND=rocksdb

# Data directory
CRETOAI_DATA_DIR=/data

# Cache size (MB)
CRETOAI_CACHE_SIZE_MB=512

# Enable compression
CRETOAI_COMPRESSION=true

# ============================================================================
# Dark Domain Configuration
# ============================================================================
# Enable anonymous routing
CRETOAI_DARK_DOMAIN_ENABLED=true

# Routing strategy: onion, mixnet
CRETOAI_ROUTING_STRATEGY=onion

# Number of hops
CRETOAI_ROUTING_HOPS=3

# ============================================================================
# Telemetry & Monitoring
# ============================================================================
# Enable telemetry
CRETOAI_TELEMETRY_ENABLED=true

# Metrics export interval (seconds)
CRETOAI_METRICS_INTERVAL=60

# Prometheus metrics
CRETOAI_PROMETHEUS_ENABLED=true
CRETOAI_PROMETHEUS_PORT=9090

# ============================================================================
# Security & Rate Limiting
# ============================================================================
# API rate limit (requests per minute)
CRETOAI_RATE_LIMIT_RPM=1000

# Enable CORS
CRETOAI_CORS_ENABLED=true
CRETOAI_CORS_ORIGINS=*

# Enable TLS
CRETOAI_TLS_ENABLED=false
CRETOAI_TLS_CERT_PATH=/etc/cretoai/certs/server.crt
CRETOAI_TLS_KEY_PATH=/etc/cretoai/certs/server.key

# ============================================================================
# Development & Debugging
# ============================================================================
# Rust backtrace: 0, 1, full
RUST_BACKTRACE=1

# Log format: json, pretty, compact
CRETOAI_LOG_FORMAT=pretty

# Enable debug endpoints
CRETOAI_DEBUG_ENDPOINTS=false

# ============================================================================
# Docker-Specific (docker-compose.demo.yml)
# ============================================================================
# Node identifiers
CRETOAI_NODE_ID=node-1
CRETOAI_BOOTSTRAP=false

# Consensus node addresses (Docker network)
# Format: hostname:port
# These are automatically set in docker-compose.demo.yml
