# Dockerfile for Vigilia AI MCP Server

FROM rust:1.75-slim as builder

RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY Cargo.toml ./
COPY src ./src

RUN cargo build --release --bin vigilia-mcp-server

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -m -u 1000 vigilia
RUN mkdir -p /data && chown -R vigilia:vigilia /data

COPY --from=builder /app/target/release/vigilia-mcp-server /usr/local/bin/vigilia-mcp-server
COPY config/mcp.toml /etc/vigilia/mcp.toml

USER vigilia

EXPOSE 8090 8091

ENV RUST_LOG=info
ENV QUDAG_MCP_CONFIG=/etc/vigilia/mcp.toml

CMD ["/usr/local/bin/vigilia-mcp-server", "--config", "/etc/vigilia/mcp.toml"]
