{
  "name": "vigilia-core",
  "version": "0.1.0",
  "description": "Vigilia AI - Quantum-resistant security platform for government and critical infrastructure",
  "type": "module",
  "main": "pkg/vigilia_core.js",
  "types": "pkg/vigilia_core.d.ts",
  "files": [
    "pkg/**/*"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:all": "npm run build && npm run build:nodejs",
    "test": "cargo test --all",
    "test:wasm": "wasm-pack test --headless --firefox --chrome",
    "bench": "cargo bench --all",
    "lint": "cargo clippy --all-targets --all-features -- -D warnings",
    "format": "cargo fmt --all",
    "format:check": "cargo fmt --all -- --check",
    "docs": "cargo doc --no-deps --all-features --open",
    "clean": "cargo clean && rm -rf pkg pkg-node",
    "dev": "cargo watch -x 'run --bin vigilia-node'",
    "start:mcp": "cargo run --bin vigilia-mcp-server",
    "start:node": "cargo run --bin vigilia-node -- --config config/node.toml",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "vigilia",
    "quantum-resistant",
    "post-quantum-cryptography",
    "security",
    "government",
    "critical-infrastructure",
    "dag",
    "consensus",
    "p2p",
    "wasm",
    "rust"
  ],
  "author": "Creto Systems - Vigilia AI Team",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/creto-systems/vigilia-core.git"
  },
  "bugs": {
    "url": "https://github.com/creto-systems/vigilia-core/issues"
  },
  "homepage": "https://vigilia.ai",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "wasm-pack": "^0.12.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
