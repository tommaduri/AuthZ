{
  "name": "@authz-engine/cli",
  "version": "0.1.0",
  "description": "CLI tool for Aegis Authorization Engine - policy management and testing",
  "type": "module",
  "bin": {
    "authz": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@authz-engine/core": "workspace:*",
    "@authz-engine/server": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "yaml": "^2.3.4",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vitest": "^1.0.0"
  },
  "keywords": ["authorization", "cli", "policy", "testing", "management"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/authz-engine.git",
    "directory": "packages/cli"
  }
}
