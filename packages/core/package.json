{
  "name": "@authz-engine/core",
  "version": "0.1.0",
  "description": "Core policy engine for Aegis Authorization Engine",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests/unit",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "bench": "vitest bench benchmarks/",
    "bench:cel": "vitest bench benchmarks/cel-evaluator.bench.ts",
    "bench:engine": "vitest bench benchmarks/decision-engine.bench.ts"
  },
  "dependencies": {
    "cel-js": "^0.4.0",
    "yaml": "^2.3.4",
    "ajv": "^8.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": ["authorization", "policy", "cel", "cerbos", "access-control"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/authz-engine.git",
    "directory": "packages/core"
  }
}
