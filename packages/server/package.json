{
  "name": "@authz-engine/server",
  "version": "0.1.0",
  "description": "Aegis Authorization Engine - REST + gRPC Server",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "proto", "README.md"],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:integration": "vitest run --dir tests/integration",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@authz-engine/core": "workspace:*",
    "@authz-engine/agents": "workspace:*",
    "@grpc/grpc-js": "^1.9.12",
    "@grpc/proto-loader": "^0.7.10",
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.1",
    "ws": "^8.16.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "chokidar": "^3.5.3",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-node": "^1.25.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vitest": "^1.0.0"
  },
  "keywords": ["authorization", "server", "grpc", "rest", "fastify"],
  "license": "MIT"
}
