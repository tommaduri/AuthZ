{
  "name": "@authz-engine/playground",
  "version": "0.1.0",
  "description": "Interactive policy playground and simulator for Aegis Authorization Engine",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "authz-playground": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./simulator": {
      "types": "./dist/simulator.d.ts",
      "import": "./dist/simulator.js"
    },
    "./repl": {
      "types": "./dist/repl.d.ts",
      "import": "./dist/repl.js"
    },
    "./web-server": {
      "types": "./dist/web-server.d.ts",
      "import": "./dist/web-server.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "start:repl": "tsx src/index.ts repl",
    "start:server": "tsx src/index.ts serve",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@authz-engine/core": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "yaml": "^2.3.4",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "authorization",
    "policy",
    "playground",
    "simulator",
    "testing",
    "repl",
    "cel"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/authz-engine.git",
    "directory": "packages/playground"
  }
}
